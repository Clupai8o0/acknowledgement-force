{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Acknowledgement Force",
  "version": "0.2.0",
  "identifier": "com.clupa.acknowledgement-force",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Acknowledgement Force",
        "width": 1400,
        "height": 900,
        "fullscreen": false,
        "resizable": true,
        "alwaysOnTop": false,
        "minimizable": true,
        "maximizable": true,
        "closable": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "template": "wix/main.wxs"
      }
    }
  }
}
